<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/credits_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Credits">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="UselessLeaf" >

            <TextView
                android:id="@+id/abt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textAlignment="center"
                android:textColor="@android:color/primary_text_light"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App created by Zacharee1"
                android:textAlignment="center"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Created to control certain UI elements of the LG V20"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Most tweaks require you flash a separate mod, but a few will work regardless"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Visit the XDA thread to download the mod"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/play_store"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Play Store" />

                <Button
                    android:id="@+id/xda_thread"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="XDA" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
