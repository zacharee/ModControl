<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zacharee1.modcontrol.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LG V20 Mod Control"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/master"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/enable_switch"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/enable_switch"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/enable_switch"
                    android:layout_toStartOf="@+id/enable_switch"
                    android:layout_weight="1"
                    android:text="Enabled"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/enable_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:switchMinWidth="50dp"
                    android:switchTextAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/qtools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="Colored Quick Toggles"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/color_tool1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/white_tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="White" />

                    <RadioButton
                        android:id="@+id/red_tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/blue_tool"
                        android:layout_alignStart="@+id/blue_tool"
                        android:layout_below="@+id/blue_tool"
                        android:layout_column="2"
                        android:layout_marginTop="10dp"
                        android:layout_row="0"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="Red" />

                    <RadioButton
                        android:id="@+id/green_tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/red_tool"
                        android:layout_alignStart="@+id/red_tool"
                        android:layout_below="@+id/red_tool"
                        android:layout_column="1"
                        android:layout_marginTop="10dp"
                        android:layout_row="1"
                        android:layout_weight="1"
                        android:text="Green" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/color_tool2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/blue_tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/white_tool"
                        android:layout_alignStart="@+id/white_tool"
                        android:layout_below="@+id/white_tool"
                        android:layout_column="1"
                        android:layout_marginTop="10dp"
                        android:layout_row="0"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="Blue"
                        android:textAlignment="viewStart" />

                    <RadioButton
                        android:id="@+id/purple_tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/red_tool"
                        android:layout_alignStart="@+id/red_tool"
                        android:layout_below="@+id/red_tool"
                        android:layout_column="0"
                        android:layout_marginTop="10dp"
                        android:layout_row="1"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="Purple" />

                    <RadioButton
                        android:id="@+id/multi_tool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/red_tool"
                        android:layout_alignStart="@+id/red_tool"
                        android:layout_below="@+id/red_tool"
                        android:layout_column="3"
                        android:layout_marginTop="10dp"
                        android:layout_row="0"
                        android:layout_weight="1"
                        android:text="Multi" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/minit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="3Minit"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/enable_switch"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/enable_switch"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/enable_switch"
                        android:layout_toStartOf="@+id/enable_switch"
                        android:layout_weight="1"
                        android:text="3Minit Battery in Statusbar"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/minbatstat_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:switchMinWidth="50dp"
                        android:switchTextAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="284dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/enable_switch"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/enable_switch"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/enable_switch"
                        android:layout_toStartOf="@+id/enable_switch"
                        android:text="3Minit Battery in Immersive"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/minbatstat_imm_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:switchMinWidth="50dp"
                        android:switchTextAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="282dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/enable_switch"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/enable_switch"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/enable_switch"
                        android:layout_toStartOf="@+id/enable_switch"
                        android:text="3Minit Battery in AOD"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/minbataod_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:switchMinWidth="50dp"
                        android:switchTextAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Stausbar"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="294dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/enable_switch"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/enable_switch"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/enable_switch"
                        android:layout_toStartOf="@+id/enable_switch"
                        android:text="AOSP Signal Icons"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/wide_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:switchMinWidth="50dp"
                        android:switchTextAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
